{
    "name": "{{ project_name }}",
    "build": {
        "dockerfile": "Dockerfile",
        "options": ["--format=docker"] // required for Podman, remove line if using Docker
    },

    "updateRemoteUserUID": false,
    "overrideCommand": false,
    "shutdownAction": "none",
    
    // `type=bind,z` required for Podman, replace with `type=bind` if using Docker
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/jovyan/work,type=bind,z", 
    "workspaceFolder": "/home/jovyan/work",

    "runArgs": [
        "--user=1000:100",
        // required for Podman, remove line if using Docker
        "--userns=keep-id:uid=1000,gid=100",
        {% if use_gpu == 'no' or use_gpu == null %}
        // needs to be unique
        "--name={{ project_name }}"
        {% elif use_gpu == 'pytorch' or use_gpu == 'tensorflow' %}
        // needs to be unique
        "--name={{ project_name }}", 
        "--security-opt=label=disable",
        /* To enable GPU access, use terminal command `nvidia-smi -L`
           outside of container to view available GPUs. From there, 
           uncomment the `--device...` line below, set the device 
           number(s), and rebuild the container.
             ex. --device=nvidia.com/gpu=device=1   // Single GPU
             ex. --device=nvidia.com/gpu=device=0,1 // Two GPUs */
        // "--device=nvidia.com/gpu=device="
        {% endif %}
    ],

    "forwardPorts": [8888],
    "portsAttributes": {
        "8888": {
            // Naming the Jupyterlab port
            "label": "Jupyterlab",
            // Disable autoforwarding of ports (by default, only 8888 is necessary)
            "onAutoForward": "ignore"
        }
    },

    "customizations": {
        "vscode": {
            "settings": {
                {% if dev_language == 'Python' %}
                "python.defaultInterpreterPath": "/opt/conda/bin/python"
                {% elif dev_language == 'R' %}
                "r.rterm.linux": "/opt/conda/bin/radian",
                "r.bracketedPaste": true,
                "r.plot.useHttpgd": true
                {% elif dev_language == 'R and Python' %}
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "r.rterm.linux": "/opt/conda/bin/radian",
                "r.bracketedPaste": true,
                "r.plot.useHttpgd": true
                {% endif %}
            },
            "extensions": [
                {% if use_vscode_ext %}
                {% if 'Python' in dev_language %}
                "ms-python.python",             // for Python
                "ms-toolsai.jupyter",           // for Python
                "ms-toolsai.jupyter-keymap",    // for Python
                {% endif %}
                {% if use_quarto %}
                "quarto.quarto",                // for Python and R
                {% endif %}
                {% if 'R' in dev_language %}
                "reditorsupport.r",             // for R
                "RDebugger.r-debugger",         // for R
                {% endif %}
                {% endif %}
                "ms-vscode.live-server",
                "analytic-signal.preview-pdf"
            ]
        }
    }
}
